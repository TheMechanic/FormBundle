{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Form</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Isactive</th>
                <td>{{ entity.isActive }}</td>
            </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('form') }}">
                Back to the list
            </a>
        </li>
        <li>
            <a href="{{ path('form_edit', { 'id': entity.id }) }}">
                Edit
            </a>
        </li>
        <li>{{ form(delete_form) }}</li>
    </ul>

    <h3>{{ answers|length }} form(s) submited</h3>
    {% for answer in answers %}
        {{ answer.createdAt|date("m/d/Y") }}<br />
    {% endfor %}

{% endblock %}
